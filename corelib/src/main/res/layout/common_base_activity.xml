<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/baseTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/base_close_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="取消"
                android:textColor="@android:color/black"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/base_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@mipmap/back" />
        </LinearLayout>


        <TextView
            android:id="@+id/base_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" "
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/base_finish_image"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:src="@mipmap/back" />

            <TextView
                android:id="@+id/base_finish_tv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="关闭"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/base_div"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/baseTitleLayout"
        android:background="#ccc"></TextView>

    <RelativeLayout
        android:id="@+id/base_contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/base_div"
        android:orientation="vertical">

    </RelativeLayout>

</RelativeLayout>